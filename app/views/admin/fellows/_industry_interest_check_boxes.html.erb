<% checkbox_columns = 2 %>
<% column_width = (95 / checkbox_columns).to_s + '%' %>

<div id="industry-interest-collection">
  <h3>Industries/Interests</h3>

  <% checkbox_columns.times do |column_index| %>
    <p style="float: left; width: <%= column_width %>;">
      <% column_range(Fellow.industry_interest_names, checkbox_columns, column_index).each do |name| %>
        <% tag_id = "fellow_industry_interest_names_#{name.downcase.gsub(/[^a-z0-9]+/, '')}" %>
      
        <%= check_box_tag("fellow[industry_interest_names][]", name, fellow.industry_interest_names.include?(name), id: tag_id) %>
        <%= label_tag(tag_id, name, style: 'display: inline;') %><br>
      <% end %>
    </p>
  <% end %>
</div>

<div style="clear: left;"></div>
